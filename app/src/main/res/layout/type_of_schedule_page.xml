<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@color/lightAsh"
            >

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="225dp"
            app:cardBackgroundColor="#00BCD4"
            android:id="@+id/cardView_select_schedule"
            >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="cursive"
                            android:text="Select a Schedule Category"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="26dp"
                            android:textStyle="bold"
                            />

                </LinearLayout>

        </androidx.cardview.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/cardView_select_schedule"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"

            >
            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                app:cardBackgroundColor="#e6e6e6"
                app:cardCornerRadius="12dp"
                android:id="@+id/careViews_category_option1"
                >

                <ImageView
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:src="@drawable/twotone_directions_run_white_48"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    />

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Life"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:fontFamily="cursive"
                    android:layout_marginTop="70dp"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#e6e6e6"
                app:cardCornerRadius="12dp"
                >

                <ImageView
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:src="@drawable/twotone_insert_invitation_white_48"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    />

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Particular Day"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:fontFamily="cursive"
                    android:layout_marginTop="70dp"
                    />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <Button
            android:layout_marginTop="100dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_gravity="center"
            android:text="Continue"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="26dp"
            android:textStyle="bold"
            android:fontFamily="cursive"

            />

    </LinearLayout>
</RelativeLayout>

