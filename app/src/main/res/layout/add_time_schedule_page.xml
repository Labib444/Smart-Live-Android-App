<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="#DADADA"
        android:layout_below="@+id/horizontalView_create_schedule"
        android:layout_marginTop="20dp"
        app:cardElevation="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:textStyle="italic"
                android:textSize="22dp"
                android:paddingLeft="10dp"
                android:hint="Write Schedule Title"
                android:background="@null"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="#CE4E38"
        android:layout_below="@+id/horizontalView_create_schedule"
        android:layout_marginTop="20dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="20dp"
        android:id="@+id/add_time_for_schedule_cardView"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="22dp"
                android:paddingLeft="20dp"
                android:text="Add Time for Schedule"
                android:gravity="center_vertical"
                android:textAllCaps="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/twotone_add_circle_white_48"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        >

        <com.google.android.material.chip.ChipGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:singleSelection="true"
            android:id="@+id/chipGroup_select_time"
            >

        </com.google.android.material.chip.ChipGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More Advanced Settings"
        android:textColor="#2196F3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="#009688"
        android:layout_below="@+id/horizontalView_create_schedule"
        android:layout_marginTop="10dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="20dp"
        android:id="@+id/continue_cardview"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="22dp"
                android:paddingLeft="20dp"
                android:text="Continue"
                android:gravity="center_vertical"
                android:textAllCaps="true"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>




